{
	"compilerOptions": {
		"allowJs": true,
		// "baseUrl": "./",
		// "checkJs": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "preserve",     
		"lib": [
			"es6", "dom"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		// "noEmit": true,
		"noImplicitAny": true,
		"noImplicitThis": false,
		"outDir": "./bin",
		"sourceMap": true,
		"strict": true,
		"strictFunctionTypes": false,
		"strictNullChecks": true,
		"target": "es2017",
		"typeRoots": [ "node_modules/@types", "./typings" ],
		"types": [
			"node"
		], 
		
	},
	"include": [
		"src/**/*.ts", "src/client/features/packi/localManager.tsx"
	],
	"exclude": [
		"node_modules", "./typings"
	]
}